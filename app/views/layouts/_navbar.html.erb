<nav class='navbar navbar-fixed-top navbar-inverse' role='navigation'>
  <div class='container'>
    <div class='navbar-header'>
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class='navbar-brand' href='/'>Scrinium<sup>pre-alpha</sup></a>
    </div>

    <div class='collapse navbar-collapse'>
      <ul class='nav navbar-nav navbar-right'>
        <% RailsEnginesHelper.engine_names.each do |e| %>
          <% navbar_items = send("#{e}_navbar_items") %>
          <% navbar_items.each do |k, v| %>
            <% if v.class == String %>
              <li><%= link_to k, v, class: 'navbar-link' %></li>
            <% elsif v.class == Hash %>
              <li class='dropdown'>
                <a href='#'
                  class='dropdown-toggle'
                  data-toggle='dropdown'
                  role='button'
                  aria-haspopup='true'
                  aria-expanded='false'>
                  <%= k %> <span class='caret'></span>
                </a>
                <ul class='dropdown-menu'>
                  <% v.each do |item, url| %>
                    <li>
                      <%= link_to item, url, class: 'navbar-link',
                        'data-no-turbolink': true %>
                    </li>
                  <% end %>
                </ul>
              </li>
            <% end %>
          <% end %>
        <% end %>
        <li>
          <%=
            link_to fa_icon('institution', text: t('scrinium.organization')),
            main_app.organizations_path,
            class: 'navbar-link'
          %>
        </li>
        <li>
          <%=
            link_to fa_icon('mortar-board', text: t('scrinium.research')),
            main_app.researches_index_path,
            class: 'navbar-link'
          %>
        </li>
        <% if user_signed_in? %>
          <li class='dropdown'>
            <a href='#'
              class='dropdown-toggle'
              data-toggle='dropdown'
              role='button'
              aria-haspopup='true'
              aria-expanded='false'>
              <%= fa_icon('user', text: t('scrinium.user')) %> <span class='caret'></span>
            </a>
            <ul class='dropdown-menu'>
              <li>
                <%=
                  link_to fa_icon('home', text: t('user.profile')),
                  main_app.user_path(current_user)
                %>
              </li>
              <li>
                <%=
                  link_to fa_icon('dashboard', text: t('global.dashboard')),
                  main_app.dashboard_index_path
                %>
              </li>
              <li>
                <%=
                  link_to fa_icon('plus-square', text: t('action.add')+t('scrinium.article')),
                  main_app.new_user_article_path(current_user)
                %>
              </li>
            </ul>
          </li>
          <li><%= link_to fa_icon('sign-out', text: t('user.signout')), main_app.destroy_user_session_path, method: :delete, class: 'navbar-link' %></li>
        <% else %>
          <li><%= link_to fa_icon('pencil-square-o', text: t('user.signup')), main_app.new_user_registration_path, :class => 'navbar-link' %></li>
          <li><%= link_to fa_icon('sign-in', text: t('user.signin')), main_app.new_user_session_path, class: 'navbar-link' %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
