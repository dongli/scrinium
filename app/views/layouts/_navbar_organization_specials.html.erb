<% if current_user and current_user.current_organization_id %>
  <% organization = Organization.find(current_user.current_organization_id) %>
  <li class='dropdown'>
    <a href='#' class='dropdown-toggle' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false'>
      <%= logo organization, size: '30x30' %>
    </a>
    <ul class='dropdown-menu'>
      <li><%= link_to fa_icon('home', text: '主页'), organization %></li>
      <% engines = active_engines(organization) %>
      <% if not engines.empty? %>
          <% engines.each do |engine| %>
            <% navbar_items = send("#{engine}_navbar_items") %>
            <% navbar_items.each do |key, value| %>
              <li><%= link_to key, value, class: 'navbar-link' %></li>
            <% end %>
          <% end %>
      <% end %>
    </ul>
  </li>
<% end %>
