<div class='row'>
  <% collections.each do |c| %>
    <div id='message-bus-collection-update-<%= c.collectable_type %>-<%= c.collectable_id %>'
      data-collection-id=<%= c.id %>></div>
    <div class='col-md-6' id='collection-<%= c.id %>'>
      <div class='well'>
        <div>
          <% if c.updated %>
            <%= fa_icon('refresh', class: 'float-left', id: "#{c.collectable_type}-#{c.collectable_id}") %>
          <% else %>
            <%= fa_icon('refresh', class: 'float-left', id: "#{c.collectable_type}-#{c.collectable_id}", style: 'display: none;') %>
          <% end %>
          <div class='float-right'>
            <% if c.watched %>
              <%=
                link_to fa_icon('eye'),
                collection_toggle_watched_path(c), remote: true
              %>
            <% else %>
              <%=
                link_to fa_icon('eye-slash'),
                collection_toggle_watched_path(c), remote: true
              %>
            <% end %>
          </div>
        </div>
        <dl>
          <dt><%= link_to c.collectable.title, collection_view_path(c) %></dt>
          <dd>
            <ul class='clean-list'>
              <li><%= t('article.author')+': '+c.collectable.user.name %></li>
              <li>
                <ul class='tag-cloud'>
                  <% c.collectable.categories.each do |t| %>
                    <li><span class='label label-default'>
                      <%= t.name %>
                    </span></li>
                  <% end %>
                </ul>
              </li>
            </ul>
          </dd>
        </dl>
      </div>
    </div>
  <% end %>
</div>
