<% if defined? @folder %>
  a = $('a[href="/folders/<%= @folder.id %>"]');
  a.before('<%= j render "folders/rename", folder: @folder %>');
  $('input#folder_name').keypress(function(e) {
    if (e.which == 13) {
      $('form#edit_form_<%= @folder.id %>').submit();
    }
  });
  a.hide();
  $('input#folder_name').focus();
<% elsif defined? @resource %>
  alert('Rename a resource with name <%= @resource.name %>');
<% end %>
