<table class='table table-striped'>
  <thead>
    <tr>
      <th width="100"><%= t('organization.short_name') %></th>
      <th width="300"><%= t('organization.name') %></th>
      <th width="200"><%= t('global.create_time') %></th>
    </tr>
  </thead>
  <tbody>
    <% organizations.each do |organization| %>
      <% next if o.short_name == 'void' %>
      <tr>
        <td>
          <%= link_to organization.short_name, organization %>
        </td>
        <td><%= organization.name %></td>
        <td><%= organization.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
