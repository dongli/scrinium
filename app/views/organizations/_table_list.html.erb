<table class='table table-striped'>
  <thead>
    <tr>
      <th width="100"><%= t('organization.short_name') %></th>
      <th width="300"><%= t('organization.name') %></th>
      <th width="200"><%= t('global.create_time') %></th>
    </tr>
  </thead>
  <tbody>
    <% organizations.each do |organization| %>
      <tr class='clickable-row' data-href='<%= organization_path(organization) %>'>
        <td>
          <%= organization.short_name %>
        </td>
        <td><%= organization.name %></td>
        <td><%= organization.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
