<% content_for :title, @organization.short_name %>
<% add_breadcrumb @organization.short_name, organization_path(@organization) %>

<% content_for :left_side do %>
  <%= render 'organizations/profile_left' %>
<% end %>

<% content_for :main_block do %>
  <% if policy(@organization).update? %>
    <%=
      render 'layouts/navtab',
      tabs: {
        info: [ t('tab.info'), render('organizations/info') ],
        suborganizations: [ t('tab.children'), render('organizations/suborganizations') ],
        members: [ t('tab.members'), render('organizations/members') ],
        engines: [ t('tab.engines'), render('organizations/engines') ],
        admin: [ t('tab.admin'), render('organizations/admin') ]
      }
    %>
  <% else %>
    <%=
      render 'layouts/navtab',
      tabs: {
        info: [ t('tab.info'), render('organizations/info') ],
        suborganizations: [ t('tab.children'), render('organizations/suborganizations') ],
        members: [ t('tab.members'), render('organizations/members') ],
        engines: [ t('tab.engines'), render('organizations/engines') ]
      }
    %>
  <% end %>
<% end %>
