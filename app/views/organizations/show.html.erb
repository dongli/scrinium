<% content_for :title, @organization.short_name %>
<% add_breadcrumb @organization.short_name, organization_path(@organization) %>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <% if policy(@organization).update? %>
    <%=
      render 'layouts/navtab',
      tabs: {
        info: [ t('tab.info'), render('info') ],
        suborganizations: [ t('tab.children'), render('suborganizations') ],
        members: [ t('tab.members'), render('members') ],
        admin: [ t('tab.admin'), render('admin') ]
      }
    %>
  <% else %>
    <%=
      render 'layouts/navtab',
      tabs: {
        info: [ t('tab.info'), render('info') ],
        suborganizations: [ t('tab.children'), render('suborganizations') ],
        members: [ t('tab.members'), render('members') ],
      }
    %>
  <% end %>
<% end %>
