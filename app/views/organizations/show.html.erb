<% content_for :title, t('organization.profile') %>
<% add_breadcrumb @organization.short_name, organization_path(@organization) %>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <% if policy(@organization).update? %>
    <%=
      render 'layouts/navtab',
      tabs: {
        info: [ t('global.info'), render('info') ],
        suborganizations: [ t('scrinium.suborganization'), render('suborganizations') ],
        admin: [ t('global.admin'), render('admin') ]
      }
    %>
  <% else %>
    <%=
      render 'layouts/navtab',
      tabs: {
        info: [ t('global.info'), render('info') ],
        suborganizations: [ t('scrinium.suborganization'), render('suborganizations') ]
      }
    %>
  <% end %>
<% end %>
