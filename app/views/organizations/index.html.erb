<% content_for :title, t('activerecord.models.organization') %>
<% add_breadcrumb t('activerecord.models.organization'), organizations_path, on_nav_bar: true %>

<% content_for :center_column do %>
  <div class='row'>
    <div class='col-md-6'>
      <div class="form-group">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search" id="search-query-3">
          <span class="input-group-btn">
            <button type="submit" class="btn"><span class="fui-search"></span></button>
          </span>
        </div>
      </div>
    </div>
    <div class='col-md-6'>
      <div id="tags1449733456937_tagsinput" class="tagsinput " style="height: 100%;">
        <span class="tag">
          <span>Clean&nbsp;&nbsp;</span>
          <a class="tagsinput-remove-link"></a>
        </span>
        <span class="tag">
          <span>Fresh&nbsp;&nbsp;</span>
          <a class="tagsinput-remove-link"></a>
        </span>
        <span class="tag">
          <span>Modern&nbsp;&nbsp;</span>
          <a class="tagsinput-remove-link"></a>
        </span>
        <span class="tag">
          <span>Unique&nbsp;&nbsp;</span>
          <a class="tagsinput-remove-link"></a>
        </span>
        <div class="tagsinput-add-container" id="tags1449733456937_addTag">
          <div class="tagsinput-add"></div>
          <input id="tags1449733456937_tag" value="" data-default="" style="color: rgb(102, 102, 102); width: 7px;">
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    $(".tagsinput").tagsInput();
  </script>

  <%= render 'organizations/block_list', organizations: Organization.all, add_logo: true %>
<% end %>

<% if current_user %>
  <% content_for :right_column do %>
    <div class='panel panel-default' style='text-align: center;'>
      <div class='panel-heading'>
        您加入的机构
      </div>
      <div class='panel-body'>
        <%= render 'memberships/organization_logos', user: current_user %>
      </div>
    </div>
  <% end %>
<% end %>
