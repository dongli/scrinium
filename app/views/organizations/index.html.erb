<% content_for :title, t('scrinium.organization') %>
<% add_breadcrumb t('scrinium.organization'), organizations_path, on_nav_bar: true %>

<% content_for :main_block do %>
  <%=
    render partial: 'organizations/block_list',
    locals: { organizations: Organization.all }
  %>
  <% if can? :create, Organization %>
    <%= link_to t('action.add'), new_organization_path, class: 'button float-right' %>
  <% end %>
<% end %>
