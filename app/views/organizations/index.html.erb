<% content_for :title, t('scrinium.organizations') %>
<% add_breadcrumb t('scrinium.organizations'), organizations_path, on_nav_bar: true %>

<% content_for :main_block do %>
  <table class='table'>
    <thead>
      <tr>
        <th width="100"><%= t('organization.short_name') %></th>
        <th width="300"><%= t('organization.name') %></th>
        <th width="200"><%= t('global.create_time') %></th>
        <% if current_user and ( current_user.super_admin? or current_user.admin? ) %>
          <th width="200"><%= t('global.operation') %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% Organization.all.each do |o| %>
        <tr>
          <td>
            <%= link_to o.short_name, organization_path(o) %>
          </td>
          <td><%= o.name %></td>
          <td><%= o.created_at %></td>
          <% if current_user and ( current_user.super_admin? or current_user.admin? ) %>
            <td>
              <% if current_user.super_admin? %>
                <%=
                  link_to t('global.delete'),
                  organization_path(o),
                  method: :delete,
                  data: { confirm: t('organization.are_you_sure_to_delete_this_organization?', name: o.name) },
                  class: 'button btn-xs btn-danger'
                %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% if current_user and current_user.super_admin? %>
    <%= link_to t('organization.add'), new_organization_path, class: 'button right' %>
  <% end %>
<% end %>
