<ul class='vertical-clean-list'>
  <li>
    <div class='center'>
      <a href='<%= organization_path(@organization) %>'>
        <%= logo @organization, size: :medium %>
      </a>
    </div>
  </li>
  <li><%= @organization.name %></li>
  <li><%= t('activerecord.attributes.organization.admin') %>: <%= link_to @organization.admin.name, @organization.admin %></li>
  <li>
    <% if policy(@organization).update? %>
      <%= link_to fa_icon('edit', text: t('action.edit')), [ :edit, @organization ] %>
    <% end %>
    <% if policy(@organization).destroy? %>
      <%=
        link_to fa_icon('trash', text: t('action.delete')),
        @organization, method: :delete,
        data: { confirm: t('message.are_you_sure_to_delete?', thing: t('activerecord.models.organization')) }
      %>
    <% end %>
  </li>
  <li><%= render 'memberships/apply_button', host: @organization %></li>
</ul>
