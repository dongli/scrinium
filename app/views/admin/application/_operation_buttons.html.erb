<div class="table-toolbar">
  <div class="btn-group">
    <%= link_to new_resource_path, class: 'btn green' do %>
      <%= t("action.add") %>
      <i class="fa fa-plus"></i>
    <% end %>
  </div>
  <div class="btn-group">
    <%= link_to edit_resource_path(resource), class: 'btn yellow' do %>
      <%= t("action.edit") %>
      <i class="fa fa-edit"></i>
    <% end %>
  </div>
  <div class="btn-group pull-right">
    <%= link_to resource_path(resource), :method => :delete, data: {confirm: t("action.delete")}, class: 'btn red' do %>
      <%= t("action.delete") %>
      <i class="fa fa-times"></i>
    <% end %>
  </div>
  <div class="btn-group">
    <%= link_to collection_path, class: 'btn blue' do %>
      <%= t("action.back") %>
      <i class="fa fa-backward"></i>
    <% end %>
  </div>
</div>
