<% content_for :title, t('scrinium.research') %>
<% add_breadcrumb t('scrinium.research'), researches_index_path, on_nav_bar: true %>

<% content_for :main_block do %>
  <dl>
    <dt><%= t('activerecord.models.article') %></dt>
    <dd>
      <%= render 'articles/table_list', show_author: true, articles: Article.all %>
    </dd>
  </dl>
  <dl>
    <dt><%= t('activerecord.models.reference') %></dt>
    <dd>
      <%= render 'references/table_list', references: Reference.all %>
    </dd>
  </dl>
<% end %>
