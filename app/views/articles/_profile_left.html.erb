<% show_versions ||= false %>
<ul class='left-side-list'>
  <li>
    <%=
      link_to avatar(@article.user, :medium),
      user_path(@article.user)
    %>
  </li>
  <li>
    <ul class='left-side-list'>
      <% @article.categories.each do |t| %>
        <li><span class='label label-default'>
          <%= t.name %>
        </span></li>
      <% end %>
    </ul>
  </li>
  <% if current_user and current_user == @article.user %>
    <li>
      <% if not show_versions %>
        <%=
          link_to fa_icon('edit', text: t('action.edit')),
          [:edit, current_user, @article]
        %>
        <%=
          link_to fa_icon('trash', text: t('action.delete')),
          [current_user, @article],
          method: :delete,
          data: { confirm: t('message.are_you_sure_to_delete?', thing: t('scrinium.article')) }
        %>
      <% else %>
        <%=
          link_to fa_icon('trash', text: t('action.delete')+t('article.versions')),
          user_delete_version_path(current_user, @article, -1),
          remote: true,
          data: { confirm: t('message.are_you_sure_to_delete?', thing: t('article.versions')) }
        %>
      <% end %>
    </li>
  <% end %>
  <% if @article.versions.size > 0 %>
    <li>
      <%= t('article.version_number') %>:
      <%=
        link_to @article.versions.size,
        [@article.user, @article, :versions],
        id: 'version-number'
      %>
    </li>
  <% end %>
  <% if current_user and current_user != @article.user %>
    <li>
      <% collected = is_collected? current_user, @article %>
      <%=
        link_to fa_icon('star', text: t('collection.cancel')),
        user_article_uncollect_path(current_user, @article),
        remote: true, id: 'uncollect-Article',
        style: "display: #{collected ? 'block' : 'none'}"
      %>
      <%=
        link_to fa_icon('star-o', text: t('action.collect')),
        user_article_collect_path(current_user, @article),
        remote: true, id: 'collect-Article',
        style: "display: #{collected ? 'none' : 'block'}"
      %>
    </li>
  <% end %>
</ul>
