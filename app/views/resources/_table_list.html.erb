<table class='table table-striped'>
  <thead>
    <tr>
      <th width="100"><%= t('activerecord.attributes.resource.name') %></th>
      <th width="100"><%= t('activerecord.attributes.resource.user') %></th>
      <th width="200"><%= t('activerecord.attributes.resource.created_at') %></th>
    </tr>
  </thead>
  <tbody>
    <% resources.each do |resource| %>
      <tr class='clickable-row' data-href='<%= url_for [ resource.resourceable, resource ] %>'>
        <td><%= resource.name %></td>
        <td><%= resource.user.name %></td>
        <td><%= resource.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
