<% if @membership.errors.any? %>
  <% @membership.errors.full_messages.each do |message| %>
    toastr.warning("<%= message.html_safe %>");
  <% end %>
toastr.warning("bad");
<% else %>
  toastr.success("good");
  $("#invite_memberships").html("<%= escape_javascript(render 'memberships/invite_button', host: @host) %>");
<% end %>