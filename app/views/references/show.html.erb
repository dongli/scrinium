<% content_for :title, t('activerecord.models.reference') %>

<% content_for :left_column do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :center_column do %>
  <ul class='reference'>
    <li class='title'><%= @reference.title %></li>
    <li class='authors'><%= render inline: join_authors(@reference) %></li>
    <li class='abstract'><%= @reference.abstract %></li>
    <li class='citation'><%= t('reference.citation') %>: <%= render(inline: citation(@reference)) %></li>
  </ul>
<% end %>
