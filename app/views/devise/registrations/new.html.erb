<% content_for :left_side do %>
  &nbsp;
<% end %>

<div class='login-form'>
  <%= simple_form_for resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form', class: 'form-horizontal' } do |f| %>
    <%= f.input :full_name, label: t('user.full_name'), autofocus: true, required: false, input_html: { autocapitalize: 'off', autocorrect: 'none', spellcheck: 'false' } %>
    <%= f.input :gender, label: t('user.gender'), collection: User::GenderChoices.values %>
    <%= f.input :affiliation, label: t('user.affiliation'), required: false %>
  <% end %>
</div>
