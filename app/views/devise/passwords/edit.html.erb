<% content_for :title, t('devise.passwords.reset') %>

<% content_for :main_block do %>
  <%= simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f| %>
    <%= f.hidden_field :reset_password_token %>
    <%=
      f.input :password,
      label: false,
      placeholder: t('devise.password.placeholder.new_password')
    %>
    <%=
      f.input :password_confirmation,
      label: false,
      placeholder: t('devise.password.placeholder.confirm_password')
    %>
    <%= f.button :submit, t('action.edit'), class: 'button float-right' %>
  <% end %>
<% end %>
