<% content_for :left_column do %>
  <div class='panel panel-default'>
    <div class='panel-body sidenav'>
      <ul class='nav nav-pills nav-stacked'>
        <% DashboardController::AdminModels.each do |category| %>
          <li role='presentation' class='<%= @category == category ? "active" : '' %>'>
            <%= link_to t("activerecord.models.#{category.singularize}"), send("admin_#{category}_path", category) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
