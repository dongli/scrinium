<div class='publisher-form'>
  <%= simple_form_for @publisher do |f| %>
    <%= f.input :name %>
    <%= f.input :abbreviation %>
    <%= f.input :short_name %>
    <% if policy(Publisher).qualify? %>
      <%= f.hidden_field :status, value: 'qualified' %>
    <% end %>
    <%= f.button :submit, t('action.submit'), class: 'button float-right' %>
  <% end %>
</div>
