          </div>
        <% end %>
      </div>
      <div class='panel-body'>
        <%= link_to post.postable.title, post.postable %>
        <div class='pull-right'>
          <ul class='horizontal-clean-list'>
            <li><%= fa_icon('comment-o') %> <%= post.postable.comments.size %></li>
            <li><%= fa_icon('star-o') %> <%= post.postable.collections.size %></li>
        </div>
      </div>
    </div>
  <% end %>
</div>
