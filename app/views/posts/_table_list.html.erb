<table class='table table-striped'>
  <thead>
    <tr>
      <th width='200'><%= t('activerecord.attributes.post.title') %></th>
      <th width='100'><%= t('activerecord.attributes.post.user') %></th>
      <th width='200'><%= t('activerecord.attributes.post.created_at') %></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td><%= link_to "《#{post.postable.title}》", post.postable %></td>
        <td><%= link_to post.user.name, post.user %></td>
        <td><%= post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
