<fieldset class='question-field'>
  <div class='question-form'>
    <div class='row'>
      <div class='col-md-1 col-sm-1 col-xs-1'>
        <%= link_to fa_icon('arrow-circle-o-up 2x'), '#', class: 'move_up_field' %>
        <%= link_to fa_icon('arrow-circle-o-down 2x'), '#', class: 'move_down_field' %>
      </div>
      <div class='col-md-9 col-sm-8 col-xs-7'>
        <%=
          f.input :content,
          label: false,
          placeholder: t('scrinium.question')
        %>
      </div>
      <div class='col-md-2 col-sm-3 col-xs-4'>
        <%=
          f.input :question_type,
          label:false,
          collection: Question.question_types,
          selected: Question.question_types[f.object.question_type]
        %>
      </div>
    </div>

    <div class='right'>
      <%=
        f.input :accept_extra_answer,
        inline_label: t('question.accept_extra_answer?')
      %>
    </div>

    <%= f.simple_fields_for :answers do |g| %>
      <%= render 'answer_field', f: g %>
    <% end %>

    <div class='add-answer right'>
      <%= link_to_add_field t('action.add')+t('scrinium.answer'), f, :answers, class: 'button' %>
      <%= link_to t('action.delete'), '#', class: 'btn btn-danger remove_field' %>
    </div>
  </div>
</fieldset>
