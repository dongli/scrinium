<% content_for :title, t('scrinium.survey') %>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <dl>
    <dt><%= @survey.title %></dt>
    <dd><%= @survey.preface %></dd>
  </dl>
  <dl>
    <dt><%= t('scrinium.question') %></dt>
    <dd>
      <ol>
        <% @survey.questions.each do |q| %>
          <%= render 'question_show', question: q %>
        <% end %>
      </ol>
    </dd>
  </dl>
<% end %>
