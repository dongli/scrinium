<style type='text/css'>
  html body {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
  }
</style>
<div class='alert alert-danger horizontal-centered'>
  本平台不支持IE，请您使用Chrome、Firefox或Safari！Orz
</div>
<div class='vertical-centered-window-block'>
  <div class='vertical-centered'>
    <div class='devise-form'>
      <div class='center'>
        <h3 style='font-family: Lato; font-weight: bold;'>
          <%= link_to 'SCRINIUM', root_url(subdomain: false) %>
        </h3>
        <p>
          开启全新的互联科研方式
        </p>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "users_sign_up"}) do |f| %>
        <ul class='combined-inputs'>
          <li><%= f.input :name, label: false %></li>
          <li><%= f.input :email, label: false %></li>
          <li><%= f.input :password, label: false %></li>
          <li><%= f.input :password_confirmation, label: false %></li>
        </ul>
        <%= f.button :submit, t('devise.views.sign_up'),
          class: 'btn btn-success uppercase btn-block',
          data: { disable_with: t('devise.views.submit') } %>
        <div class='pull-right' style='margin-top: 10px;'>
          <%= link_to t('devise.views.sign_in'), new_user_session_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
