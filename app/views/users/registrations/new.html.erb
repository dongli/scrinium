<div class='block'>
  <div class='vertical-centered'>
    <div class='devise-form'>
      <div class='center'>
        <h3 style='font-family: Lato; font-weight: bold;'>
          <%= link_to 'SCRINIUM', root_url(subdomain: false) %>
        </h3>
        <p>
          开启全新的互联科研方式
        </p>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: "users_sign_up"}) do |f| %>
        <%= f.input :name, input_html: {
            style: 'border-top-width: 1px; border-bottom-width: 1px; border-bottom-left-radius: 0; border-bottom-right-radius: 0;'
          }, wrapper_html: {
            style: 'margin-bottom: 0px'
          } %>
        <%= f.input :email, input_html: {
            style: 'border-top-width: 1px; border-bottom-width: 1px; border-radius: 0; border-radius: 0;'
          }, wrapper_html: {
            style: 'margin-bottom: 0px'
          } %>
        <%= f.input :password, input_html: {
            style: 'border-top-width: 1px; border-bottom-width: 1px; border-radius: 0; border-radius: 0;'
          }, wrapper_html: {
            style: 'margin-bottom: 0px'
          } %>
        <%= f.input :password_confirmation, input_html: {
            style: 'border-top-width: 1px; border-top-left-radius: 0; border-top-right-radius: 0;'
          } %>
        <%= f.button :submit, t('devise.views.sign_up'),
          class: 'btn btn-success uppercase btn-block',
          data: { disable_with: t('devise.views.submit') } %>
        <div class='pull-right' style='margin-top: 10px;'>
          <%= link_to t('devise.views.sign_in'), new_user_session_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
