<dl>
  <dt><%= t('user.latest_articles') %></dt>
  <dd>
    <%=
      render partial: 'articles/table_list',
      locals: {
        articles: user.articles,
        show_author: false
      }
    %>
    <% if is_same_user? user %>
      <div class='right'>
        <%= link_to t('action.add'), new_user_article_path(user), class: 'button' %>
      </div>
    <% end %>
  </dd>
</dl>
