<table class='table'>
  <thead>
    <tr>
      <th width="50"><%= t('user.name') %></th>
      <th width="80"><%= t('user.email') %></th>
      <th width="300"><%= t('user.affiliation') %></th>
      <th width="80"><%= t('user.role') %></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <a href="<%= user_path(user) %>"><%= user.name %></a>
        </td>
        <td><%= user.email %></td>
        <td><%= render 'memberships/organization_logos', user: user %></td>
        <td><%= user.role.text %></td>
      </tr>
    <% end %>
  </tbody>
</table>
