<% content_for :title, t('activerecord.models.profile') %>
<% add_breadcrumb t('activerecord.models.profile'), @user, on_nav_bar: true %>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <%=
    render 'layouts/navtab',
    tabs: {
      activities: [
        t('user.activity'),
        render('articles', user: @user)+render('publications', user: @user)
      ],
      collections: [
        t('collection'),
        render('collections', user: @user)
      ],
      resources: [
        t('activerecord.models.resource'),
        render('resource_board/show', folderable: @user)
      ]
    }
  %>
<% end %>
