<% content_for :title, t('user.profile') %>
<% add_breadcrumb t('user.profile'), user_path(@user), on_nav_bar: true %>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <%=
    render partial: 'layouts/navtab',
    locals: {
      tabs: {
        activities: [
          t('global.activity'),
          render(partial: 'articles', locals: { user: @user })+render(partial: 'publications', locals: { user: @user })
        ],
        collections: [
          t('scrinium.collection'),
          render(partial: 'collections', locals: { user: @user })
        ],
        resources: [
          t('scrinium.resource'),
          render(partial: 'resources/list', locals: { resources: @user.resources })
        ]
      }
    }
  %>
<% end %>
