<% content_for :title, t('user.profile') %>
<% add_breadcrumb t('user.profile'), user_path(@user), on_nav_bar: true %>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <%=
    render 'layouts/navtab',
    tabs: {
      activities: [
        t('global.activity'),
        render('articles', user: @user)+render('publications', user: @user)
      ],
      collections: [
        t('scrinium.collection'),
        render('collections', user: @user)
      ],
      resources: [
        t('scrinium.resource'),
        render('resources/list', resources: @user.resources)
      ]
    }
  %>
<% end %>
