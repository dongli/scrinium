<div class='row'>
  <% users.each do |user| %>
    <div class='col-md-3 col-sm-4 col-xs-6'>
      <a href='<%= user_path(user) %>'>
        <div class='panel panel-default box-shadow'>
          <div class='panel-body'>
            <ul class='clean-list horizontal-centered spacing-1-em'>
              <li><%= avatar user, size: :medium, class: 'img-responsive center-block avatar' %></li>
              <li><%= user.name %></li>
            </ul>
          </div>
        </div>
      </a>
    </div>
  <% end %>
</div>
