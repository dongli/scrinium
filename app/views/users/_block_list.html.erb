<div class='row'>
  <% users.each do |user| %>
    <div class='col-md-3 col-sm-4 col-xs-6'>
      <div class='panel panel-default box-shadow'>
        <div class='panel-body'>
          <ul class='clean-list horizontal-centered spacing-1-em'>
            <li><%= link_to image_tag(user.profile.avatar_url(:medium), class: 'avatar'), user %></li>
            <li><%= user.name %></li>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>
