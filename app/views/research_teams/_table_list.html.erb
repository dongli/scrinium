<table class='table'>
  <thead>
    <tr>
      <th width="100"><%= t('research_team.short_name') %></th>
      <th width="300"><%= t('research_team.name') %></th>
      <th width="200"><%= t('global.create_time') %></th>
      <% if is_super_admin_or_admin?(current_user) %>
        <th width="200"><%= t('actions') %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% research_teams.each do |t| %>
      <tr>
        <td>
          <%= link_to t.short_name, research_team_path(t) %>
        </td>
        <td><%= t.name %></td>
        <td><%= t.created_at %></td>
        <% if is_super_admin_or_admin?(current_user) %>
          <td>
            <% if is_super_admin?(current_user) %>
              <%=
                link_to t('action.delete'),
                research_team_path(t),
                method: :delete,
                data: { confirm: t('message.are_you_sure_to_delete?', thing: t('scrinium.research_team')) },
                class: 'button btn-xs btn-danger'
              %>
            <% end %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
