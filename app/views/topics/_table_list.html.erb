<table class='table table-striped'>
  <thead>
    <tr>
      <th width='200'><%= t('activerecord.attributes.topic.title') %></th>
      <th width='100'><%= t('activerecord.attributes.topic.user') %></th>
      <th width='200'><%= t('activerecord.attributes.topic.created_at') %></th>
    </tr>
  </thead>
  <tbody>
    <% topics.each do |topic| %>
      <tr>
        <td><%= link_to "《#{topic.topicable.title}》", topic.topicable %></td>
        <td><%= link_to topic.user.name, topic.user %></td>
        <td><%= topic.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
