<div class="modal fade" id="group_node" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close fui-cross" data-dismiss="modal" aria-hidden="true"></button>
        <h4 class="modal-title"><%= t("action.#{action_name}") %></h4>
      </div>
      <%= simple_form_for [@group, @node], remote: true do |f| %>
      <div class="modal-body">
            <div class="alert alert-info"></div>
            <%= f.error_notification %>
            <%= f.input :name %>
            <%= f.input :on_group_page %>
      </div>
      <div class="modal-footer">
        <%= f.submit t('action.save'), class: "btn btn-wide btn-primary"%>
        <a href="#" class="btn btn-default btn-wide " data-dismiss="modal">取消</a>
      </div>
      <% end %>

    </div>
  </div>
</div>