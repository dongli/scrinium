<% content_for :center_column do %>
<p id="notice"><%= notice %></p>

<h1>Listing Nodes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Group</th>
      <th>Status</th>
      <th>Position</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= @nodes.each do |node| %>
      <tr>
        <td><%= node.user_id %></td>
        <td><%= node.name %></td>
        <td><%= node.group_id %></td>
        <td><%= node.status %></td>
        <td><%= node.position %></td>
        <td><%#= link_to 'Show', node %></td>
        <td><%#= link_to 'Edit', edit_node_path(node) %></td>
        <td><%#= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Node', new_group_node_path %>
<% end %>