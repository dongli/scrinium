<% content_for :left_column do %>
  <div class='panel panel-default box-shadow'>
    <div class='panel-body'>
      <ul class='nav nav-pills nav-stacked'>
        <li role='presentation' class='<%= @category == 'profile' ? 'active' : '' %>'>
          <%= link_to t('group.edit.profile'), edit_group_path(@group, :profile) %>
        </li>
        <li role='presentation' class='<%= @category == 'topics' ? 'active' : '' %>'>
          <%= link_to t('group.edit.topics'), edit_group_path(@group, :topics) %>
        </li>
        <li role='presentation' class='<%= @category == 'home_page' ? 'active' : '' %>'>
          <%= link_to t('group.edit.home_page'), edit_group_path(@group, :home_page) %>
        </li>
      </ul>
    </div>
  </div>
<% end %>

<% content_for :center_column do %>
  <%= render "groups/edit/#{@category}" %>
<% end %>
