<% content_for :title, @group.name %>
<% add_breadcrumb @group.short_name, @group %>

<% content_for :left_column do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :center_column do %>
  <% if policy(@group).update? %>
    <%=
      render 'layouts/navtab',
      tabs: {
        info: [ t('tab.info'), render('info') ],
        members: [ t('tab.members'), render('members') ],
        resources: [
          t('activerecord.models.resource'),
          render('resource_board/show', folderable: @group)
        ],
        admin: [ t('tab.admin'), render('admin') ]
      }
    %>
  <% else %>
    <%=
      render 'layouts/navtab',
      tabs: {
        info: [ t('tab.info'), render('info') ],
        members: [ t('tab.members'), render('members') ],
        resources: [
          t('activerecord.models.resource'),
          render('resource_board/show', folderable: @group)
        ]
      }
    %>
  <% end %>
<% end %>
