<% content_for :title, @group.name %>

<% content_for :left_side do %>
  <%= render 'profile_left' %>
<% end %>

<% content_for :main_block do %>
  <dl>
    <dt><%= t('group.description') %></dt>
    <dd class='markdown'><%= @group.description %></dd>
  </dl>
  <dl>
    <dt><%= t('group.articles') %></dt>
    <dd>
      <%= render 'articles/table_list', articles: @group.articles %>
    </dd>
  </dl>
<% end %>
