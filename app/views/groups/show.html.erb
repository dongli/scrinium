<% content_for :title, @group.name %>

<% content_for :left_column do %>
  <%= render 'groups/profile_left' %>
<% end %>

<% content_for :center_column do %>
  <% if not @group.description or @group.description.empty? %>
    <div class='horizontal-centered'>管理员很懒，什么也没有写！</div>
  <% else %>
    <%= sanitize @group.description %>
  <% end %>
<% end %>
