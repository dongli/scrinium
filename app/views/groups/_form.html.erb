<div class='group-form'>
  <%= simple_form_for(@group) do |f| %>
    <%=
      render 'layouts/upload_image', form: f,
      object: @group, image_attribute_name: :logo,
      default_image: 'logos/default_group_logo.png'
    %>
    <div class='row'>
      <div class='col-md-8'>
        <%= f.input :name, autofocus: true %>
      </div>
      <div class='col-md-4'>
        <%= f.input :short_name %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-8'>
        <%=
          f.input :category_list,
          collection: @group.categories.map { |t| t.name },
          input_html: {
            class: 'use-select2-multiple-tags',
            multiple: 'multiple'
          }
        %>
      </div>
      <div class='col-md-4'>
        <%= f.input :status %>
      </div>
    </div>
    <%= f.input :description, as: :text %>

    <%= f.button :submit, t('action.submit'), class: 'btn btn-success uppercase btn-block' %>
  <% end %>
</div>
