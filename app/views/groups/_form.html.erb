<div class='group-form'>
  <%= simple_form_for(@group) do |f| %>
    <%=
      image_tag 'medium/default_avatar.png',
      size: '100x100',
      id: 'preview-avatar'
    %>
    <%=
      f.file_field :logo,
      id: 'upload-avatar'
    %>
    <%= f.input :name, label: t('global.name'), autofocus: true %>
    <%= f.input :short_name, label: t('global.short_name') %>
    <%=
      f.input :category_list,
      label: t('group.categories'),
      collection: @group.categories.map { |t| t.name },
      input_html: {
        multiple: 'multiple',
        data: {
          placeholder: t('group.placeholder.categories')
        }
      }
    %>
    <%= f.input :privacy, label: t('group.privacy') %>
    <%= f.input :description, label: t('global.description'), as: :text %>
    <%=
      f.association :users,
      label: t('group.members'),
      label_method: :name,
      value_method: :id,
      collection: @group.users,
      input_html: {
        id: 'input-user-name',
        multiple: 'multiple'
      }
    %>
    <%= f.button :submit, t('action.submit'), class: 'button float-right' %>
  <% end %>
</div>
