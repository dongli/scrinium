<div class='group-form'>
  <%= simple_form_for(@group) do |f| %>
    <%= render 'layouts/upload_image', form: f, object: @group, image_attribute_name: :logo %>
    <div class='row'>
      <div class='col-md-8'>
        <%= f.input :name, autofocus: true %>
      </div>
      <div class='col-md-4'>
        <%= f.input :short_name %>
      </div>
    </div>
    <div class='row'>
      <div class='col-md-8'>
        <%=
          f.input :category_list,
          collection: @group.categories.map { |t| t.name },
          input_html: {
            class: 'use-select2-multiple-tags',
            multiple: 'multiple'
          }
        %>
      </div>
      <div class='col-md-4'>
        <%= f.input :privacy %>
      </div>
    </div>
    <%= f.input :description, as: :text %>
    <%=
      f.association :users,
      label_method: :name,
      value_method: :id,
      collection: @group.users,
      input_html: {
        id: 'input-user-name',
        multiple: 'multiple'
      }
    %>
    <%= f.button :submit, t('action.submit'), class: 'button float-right' %>
  <% end %>
</div>
